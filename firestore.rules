rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /books_reservation/{reservationId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      // Allow Cloud Functions to update status
      allow update: if request.auth != null || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'updatedAt']);
    }
  }
} 